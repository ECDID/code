{
  "name": "ecdid",
  "version": "1.0.0",
  "description": "Electronic Concrete Delivery Identification",
  "main": "lib/index.js",
  "scripts": {
    "postinstall": "npm run build && knex migrate:latest",
    "test": "xo && nyc ava",
    "test:watch": "ava --watch",
    "build": "babel src --out-dir dist --source-maps",
    "start": "npm run build && node dist/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ECDID/code.git"
  },
  "keywords": [
    "concrete"
  ],
  "author": "ECDID Team",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/ECDID/code/issues"
  },
  "homepage": "https://github.com/ECDID/code#readme",
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.0",
    "nyc": "^11.3.0",
    "sqlite3": "^3.1.13",
    "supertest": "^3.0.0",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "connect-ensure-login": "^0.1.1",
    "consolidate": "^0.15.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "knex": "^0.14.2",
    "morgan": "^1.9.0",
    "mustache": "^2.3.0",
    "objection": "^0.9.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.3.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "xo": {
    "rules": {
      "quotes": [
        "error",
        "double",
        {
          "allowTemplateLiterals": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "new-cap": [
        "error",
        {
          "newIsCap": true,
          "capIsNew": true,
          "capIsNewExceptions": [
            "Router",
            "Password",
            "Knex"
          ]
        }
      ]
    }
  }
}
